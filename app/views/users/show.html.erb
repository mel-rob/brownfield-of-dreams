<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>
    <% if search_results.github_token_valid? %>
      <section class='github'>
        <h1>GitHub</h1>
        <h3>Repositories</h3>
        <% search_results.repos.each do |repo| %>
          <ul>
            <section class='repos'>
              <li><%= link_to repo.name, repo.svn_url %></li>
            </section>
          </ul>
        <% end %>
        <h3>Followers</h3>
        <% search_results.followers.each do |follower| %>
          <ul>
            <section class='followers'>
              <li><%= link_to follower.login, follower.html_url %></li>
            </section>
          </ul>
        <% end %>
        <h3>Following</h3>
        <% search_results.following.each do |user| %>
          <ul>
            <section class='following'>
              <li><%= link_to user.login, user.html_url %></li>
            </section>
          </ul>
        <% end %>
      </section>
    <% else %>
      <%= link_to 'Connect to GitHub', '/auth/github', method: :get, class: "btn btn-primary mb1 bg-teal" %>
    <% end %>
  <section>
    <h1>Bookmarked Segments</h1>
  </section>
</section>
